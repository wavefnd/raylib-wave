import("../raylib");

fun main() {
    InitWindow(800, 600, "Shapes");

    while (WindowShouldClose() == 0) {
        BeginDrawing();

        ClearBackground(Color { r: 30, g: 30, b: 30, a: 255 });

        DrawLine(100, 100, 300, 100, Color { r: 255, g: 0, b: 0, a: 255 });
        DrawCircle(400, 300, 50.0, Color { r: 0, g: 255, b: 0, a: 255 });
        DrawRectangle(500, 200, 120, 80, Color { r: 0, g: 0, b: 255, a: 255 });

        EndDrawing();
    }

    CloseWindow();
}